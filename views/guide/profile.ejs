<!-- /header -->
<%- include("../conn/header.ejs") %> <%- include("../conn/top.ejs") %>
<!-- Main Sidebar Container -->
<%- include("../conn/navebar.ejs") %>
<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <h1>Profile</h1>
      <a href="/guide/edit-profile" class=""
        ><strong><i class="fas fa-user mr-1"></i> Edit Profile</strong></a
      >
    </div>
  </section>
  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-3">
          <div class="card card-primary card-outline">
            <div class="card-body box-profile">
              <div class="text-center">
                <% if(profileImage){ %>
                <img
                  class="profile-user-img img-fluid img-circle"
                  src="/profile/<%= profileImage %>"
                  alt="User profile picture"
                />
                <% }else{ %>
                <img
                  class="profile-user-img img-fluid img-circle"
                  src="../../dist/img/user2-160x160.jpg"
                  alt="User profile picture"
                />
                <% } %>
              </div>
              <h3 class="profile-username text-center">
                <%=guide.guideName %>
              </h3>
              <!-- <p class="text-muted text-center">Guide</p> -->
            </div>
          </div>
        </div>
        <div class="col-md-9">
          <div class="card">
            <div class="row card-body">
              <div class="col">
                <strong><i class="fas fa-user mr-1"></i> Name</strong>
                <p><%=guide.guideName %></p>
              </div>
              <div class="col">
                <strong><i class="fas fa-mail-bulk mr-1"></i>Email</strong>
                <p><%=guide.guideEmail %></p>
              </div>
              <div class="col">
                <strong><i class="fas fa-phone mr-1"></i> Phone</strong>
                <p><%=guide.guidePhone %></p>
              </div>
              <div class="col">
                <strong><i class="fas fa-city mr-1"></i>City</strong>
                <p><%=guide.guideCity %></p>
              </div>
            </div>
            <div class="row card-body">
              <!-- <div class="col">
                <strong
                  ><i class="fas fa-birthday-cake mr-1"></i>Date of
                  Birth</strong
                >
                <p>13/10/2000</p>
              </div> -->
              <div class="col">
                <strong><i class="fas fa-book mr-1"></i>Education</strong>
                <p><%=guide.guideEducation %></p>
              </div>
              <div class="col">
                <strong><i class="fas fa-country mr-1"></i>Country</strong>
                <p><%=guide.guideCountry %></p>
              </div>
              <div class="col">
                <strong
                  ><i class="fas fa-organization mr-1"></i>Organization</strong
                >
                <p><%=guide.guideOrganization %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<!-- /Footer -->
<%- include("../conn/copyright.ejs") %> <%- include("../conn/footer.ejs") %>
