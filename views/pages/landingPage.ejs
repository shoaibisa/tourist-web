<style>
  @import url("https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap");


.img_blog {
max-width: 100%;
display: block;
object-fit: cover;
}

.blog_card {
display: flex;
flex-direction: column;
width: clamp(19rem, calc(19rem + 2vw), 19rem);
overflow: hidden;
box-shadow: 0 .1rem 1rem rgba(0, 0, 0, 0.1);
border-radius: 1em;
background: #ECE9E6;
background: linear-gradient(to right, #FFFFFF, #ECE9E6);
}
.blog_card1 {
display: flex;
flex-direction: column;

overflow: hidden;
box-shadow: 0 .1rem 1rem rgba(0, 0, 0, 0.1);
border-radius: 1em;
background: #ECE9E6;
background: linear-gradient(to right, #FFFFFF, #ECE9E6);

}




.blogcard_body {
padding: 1rem;
display: flex;
flex-direction: column;
gap: .5rem;
}


.blog_tag {
align-self: flex-start;
padding: .25em .75em;
border-radius: 1em;
font-size: .75rem;
}
.readmore{
border-radius: 0.5em;
font-size: .45rem;
}
.tag + .tag {
margin-left: .5em;
}


.tag-red {
background: #cb2d3e;
background: linear-gradient(to bottom, #ef473a, #cb2d3e);
color: #fafafa;
}
.tag-blue {
background: #087df3;
color: #fafafa;
}
a{
text-decoration: none;
 outline:  none;
}

.blogcard_body h4 {
font-size: 1.5rem;
text-transform: capitalize;
}

.blog_footer {
display: flex;
padding: 0.3rem;
margin-top: auto;
}

.user_blog {
display: flex;
gap: .5rem;
}

.user__image_blog {
border-radius: 50%;
}

.user__info_blog > small {
color: #666;
}
</style>
