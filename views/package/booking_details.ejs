<%- include("../conn/header.ejs") %>
<%- include("../frontviewComm/navbar.ejs") %>
 
   <div class="container-fluid" >
    <div class="card" style="display: flex; flex-direction: row;">
        <div class="col-lg-9 "  style="max-width: 70% !important; height: 100%;">
            <img src="https://cdn.sendx.io/prod/upload/img/20/06/17/53/10700/full.jpg"  class="mt-5 pt-5" style="width: 100%; height: 100%;" alt="">
        </div>
        <div class="col-lg-3">
        <div class="booking_form mt-5 pt-3" >
            <form action="" method="post" class="mt-5">
                <div class="row">
                    <div class="col-sm-12">
                    <!-- text input -->
                    <div class="form-group">
                        <label>Select Date</label>
                        <input
                        type="date"
                        class="form-control"
                        name="booking_date"
                        />
                    </div>
                    </div>
                    <div class="col-sm-12">
                        <!-- text input -->
                        <div class="form-group">
                            <label>No of slot</label>
                            <input
                            type="number"
                             id="slot"
                            class="form-control"
                            name=" no_of_sloat"
                            
                            />
                        </div>
                    </div>
                    <script>
                        $(document).on('keyup', '#slot', function(){
                        //...code...
                         var slot = Number( document.getElementById('slot').value );
                         window.value=slot;  
                         
                    });
                    </script>
                    <div class="col-sm-12">
                        <!-- text input -->
                        <div class="form-group">
                            <label>passenger Details</label>
                        </div>
                    </div>
                    <% 
                     var c=3;
                    for(var i=1; i<c; i++){ %>
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Passenger <%=i%> </label>
                            <input
                            type="text"
                            class="form-control"
                            placeholder="Name of passenger"
                            name="p_name"
                            />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Age</label>
                            <input
                            type="number"
                            class="form-control"
                            placeholder="Age"
                            name="p_age"
                            />
                        </div>
                    </div>
                    <% }%>
                    <div class="col-sm-12">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Content No</label>
                            <input
                            type="phone"
                            class="form-control"
                             placeholder="phone number"
                            name="phone"
                            />
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Address</label>
                            <input
                            type=" text"
                            class="form-control"
                             placeholder="Adrress"
                            name="address"
                            />
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <!-- text input -->
                        <div class="form-group">
                            <label>City</label>
                            <input
                            type=" text"
                            class="form-control"
                             placeholder="city"
                            name="city"
                            />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <!-- text input -->
                        <div class="form-group">
                            <label>State</label>
                            <input
                            type=" text"
                            class="form-control"
                             placeholder="state"
                            name="state"
                            />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Country</label>
                            <input
                            type=" text"
                            class="form-control"
                             placeholder="country"
                            name="country"
                            />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <!-- text input -->
                        <div class="form-group">
                            <label>zip</label>
                            <input
                            type="number"
                            class="form-control"
                             placeholder="zip"
                            name="zip"
                            />
                        </div>
                    </div>
                    <div class="col-sm-">
                        <!-- text input -->
                        <div class="form-group">
                             <a   href="/invoice"  style="background-color: rgb(249, 200, 37); outline: none;" type="submit" class="btn btn-primary"  value="booked" >Book Slot</a>
                        </div>
                    </div>

                </div>
                   
        
            </form>
        </div>
        </div>
   </div>
</div>
<%- include("../frontviewComm/footer.ejs") %>