   <div class="card">
      <div class="card-body pt-5 mt-5" style="display: flex; justify-content: space-evenly;">
         <div class="package_image" >
         <img class="package_image_img" src="/profile/<%=pack.packageImage %>" alt="">
         </div>
         <div class="package_content">
               <h5 class="heading_package">
                <%= pack.packageTitle %>
               </h5>
               <div class="package_location"><i class="fas fa-location-arrow">
                  <% var locations = "" %>
                  <% pack.packageRoutes.forEach(function(location){ %>
                     <% locations += location + ", " %>
                  <% }) %>
               <%=locations %>
               </i></div>

               <div class="package_dureastion"> <i class="fas fa-clock"></i><%=pack.packageDuration %></div>
               <div class="package_para">
                  <p class="package_details">
                     <%= pack.packageDescription %>
                  </p>
               </div>
         </div>
         <div class="author-stars" >
            <div class="author">
               <h6  style="font-size: 14px; font-weight: bold;"> Starting from </h6>
            </div>
               <div class="type-price">
