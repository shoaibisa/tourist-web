<%- include("../conn/header.ejs") %>
 <style>
    .package_image_img{
            max-width: 300px;
    }
    .package_content{
        display: flex;
        flex-direction: column;
        max-width: 600px;
        margin-left: 20px;
         line-height: 1.7rem;

    }
    .package_booking{
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        max-width: 300px;
    }
    .heading_package{
       border-bottom: 2px  dotted grey;
    }
    .package_dureastion{
       margin-top:8px;
    }
    .package_location{
        margin-top: 8px;
    }
    .author-stars {
    display: flex;
    flex-direction: column;
 
    align-items: center;
    justify-content: center;
    
}
    .type-price {
	display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10px;
}

 </style>
<%- include("../frontviewComm/navbar.ejs") %>
